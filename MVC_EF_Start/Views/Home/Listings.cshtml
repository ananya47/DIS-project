@model IEnumerable<Company>



@{
    var title = "READ Company";
    ViewData["Title"] = "Listings";
}




<head>
    <meta charset="utf-8">
    <title>Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/lib/w3.css">
    @* <link rel="stylesheet" href="https://www.w3schools.com/lib/w3-theme-black.css">*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css">



    <style>
        .create-container {
            background-color: white;
            height: 100vw;
        }

        .form-wrapper {
            height: 200px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-group {
            display: flex;
            justify-content: space-between;
            width: 500px;
            padding: 4px;
        }

        .brand-labling {
            color: white;
        }

            .brand-labling img {
                background-color: white;
                height: 30px;
                width: 40px;
                margin-right: 20px;
                margin-left: 20px;
            }

        .container-wrapper {
            display: flex;
            justify-content: space-between;
            background-color: black;
            align-items: center;
        }

        .top-menu-wrapper {
            background-color: black;
        }
    </style>
</head>



<body>
    <!-- Navbar -->
    <div class="container-wrapper">
        <div class="brand-labling">
            <img src="~/img/boat.png" />
            <span>RENT-A-bOAT</span>
        </div>
        <!-- Navbar -->
        <div class="top-menu-wrapper">
            <div class="list-menu">
                <ul>
                    <li><a class="list-menu" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>
                        <a href="#">Listings &#9662;</a>
                        <ul class="dropdown">
                            <li><a asp-area="" asp-controller="Home" asp-action="Create">Add</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Listings">Manage</a></li>
                        </ul>
                    </li>
                    <li><a class="list-menu" asp-area="" asp-controller="Home" asp-action="Boatloc">Boat Location</a></li>
                    <li><a class="list-menu" asp-area="" asp-controller="Home" asp-action="Stats">Stats</a></li>



                    <li><a class="list-menu" asp-area="" asp-controller="Home" asp-action="About_us">About Us</a></li>
                </ul>
            </div>



        </div>
    </div>
    <div style="background-color:white">
        <h1 align="center" style="text-shadow: 2px 2px skyblue;">Listings</h1>
        <div>
            <h4>Company Details</h4>
            <table class="table table-wrapper table-bordered table-sm table-striped">
                <thead>
                    <tr>
                        <th>company_id</th>
                        <th>Company_url</th>
                        <th>CompanyName</th>
                        <th>zip</th>
                        <th>phone_number</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null)
                {
                    <tr><td colspan="7" class="text-center">No Model Data</td></tr>
                }
                else
                {



                    @foreach (var p in Model)
                    {
                    <tr>
                        <td>@p.company_id</td>
                        <td>@p.company_url</td>
                        <td>@p.company</td>
                        <td>
                            @*@using (Html.BeginForm("Zipdetails", "Home"))*@
                            <a asp-action="Zipdetails" asp-route-id="@p.zip">@p.zip</a>
                        </td>



                        <td>@p.phone_number</td>
                        <td><a asp-action="Modify" asp-route-id="@p.company_id">Edit</a></td>
                        <!--<td><a asp-action="Delete" asp-route-id="@p.company_id">Delete</a></td>-->
                        <td>
                            <form asp-action="Delete" method="post" asp-route-id="@p.company_id">
                                <button>Delete</button>
                            </form>
                        </td>
                    </tr>



                    }
                }
                </tbody>
            </table>



            @*<div>



                <a asp-action="Index">Back to List</a>
            </div>*@


        </div>
</body>